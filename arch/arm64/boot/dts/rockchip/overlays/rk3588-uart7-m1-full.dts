/dts-v1/;
/plugin/;

/ {
	metadata {
		title = "Enable UART7-M1 with Hardware Flow Control";
		compatible = "rockchip,rk3588";
		category = "misc";
		exclusive = "GPIO3_C3", , "GPIO3_C2", "GPIO3_C1", "GPIO3_C0";
		description = "Enable UART7-M1 with hardware flow control.\nOn Radxa ROCK 5B this is TX pin 15, RX pin 11, CTSN pin 7, and RTSN pin 32.";
	};

	fragment@0 {
		target = <&uart7>;

		__overlay__ {
			status = "okay";
			pinctrl-0 = <&uart7m1_xfer &uart7m1_ctsn &uart7m1_rtsn>;
		};
	};
};
