/dts-v1/;
/plugin/;

/ {
	metadata {
		title = "Enable spidev on SPI3-M1 over CS1";
		compatible = "radxa,rock-3b";
		category = "misc";
		exclusive = "GPIO4_C2", "GPIO4_C3", "GPIO4_C5", "GPIO4_D1";
		description = "Enable spidev on SPI3-M1 over CS1.";
	};

	fragment@1 {
		target = <&spi3>;

		__overlay__ {
			status = "okay";
			#address-cells = <1>;
			#size-cells = <0>;
			pinctrl-names = "default", "high_speed";
			pinctrl-0 = <&spi3m1_cs1 &spi3m1_pins>;
			pinctrl-1 = <&spi3m1_cs1 &spi3m1_pins_hs>;
			max-freq = <50000000>;

			spidev@0 {
				compatible = "rockchip,spidev";
				status = "okay";
				reg = <0>;
				spi-max-frequency = <50000000>;
			};
		};
	};
};
