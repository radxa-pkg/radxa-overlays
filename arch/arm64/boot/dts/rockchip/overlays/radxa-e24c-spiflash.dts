/dts-v1/;
/plugin/;

/ {
	metadata {
		title = "Enable SPI Flash";
		compatible = "radxa,e24c";
		category = "misc";
		exclusive = "sfc";
		description = "Enable SPI Flash.";
	};
};

&sfc {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&fspi_pins &fspi_csn0>;
	num-cs = <2>;

	spi_flash: spi-flash@0 {
		#address-cells = <1>;
		#size-cells = <0>;
		compatible = "jedec,spi-nor";
		reg = <0x0>;
		spi-max-frequency = <50000000>;
		spi-tx-bus-width = <1>;
		spi-rx-bus-width = <4>;
		status = "okay";
	};
};

&sdhci {
	status = "disabled";
};
